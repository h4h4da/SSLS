
@model SSLS.WebUI.Models.BooksListViewModel

<div class="col-lg-6">
    <div class="input-group">
        @using (Html.BeginForm("List", "Book"))
        {
            <div class="container" style="margin-bottom:20px">
                <div class="row">
                    <div class="col-md-6">

                        <div id="custom-search-input">
                            <div class="input-group col-md-12">

                                @Html.TextBox("searchBookStr", null, new { @class = "form-control", placeholder = "输入书名" })
                                <span class="input-group-btn">
                                    <button class="btn btn-info" type="submit">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>







<table class="table">
    <tr>
        <th>
            书籍名称
        </th>
        <th>
            出版社
        </th>
        <th>
            作者
        </th>
        <th>
            
        </th>

    </tr>

    @foreach (var item in Model.Books)
    {

        @Html.Partial("BookSummary", item);

    }
</table>


<div class="btn-group pull-right">
    @Html.PageLink(Model.paginginfo, x => Url.Action("List", new { categoryId = Model.CurrentCategoryId, page = x }))
</div>
